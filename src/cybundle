#!/bin/bash
set -u
cd ~

# check if the directory exists
if [ -d ~/cy/ ]; then
  cd ~/cy/
  git stash
  git pull
  git stash pop
else
  mkdir ~/cy/
  git clone https://github.com/cyber-prophet/cy ~/cy/
fi

nu --execute 'exit' # the command to create default config and env
nu --execute 'source ~/cy/kickstart/setup-cy.nu'
